{
  "name": "@jour/request",
  "private": true,
  "version": "0.0.1",
  "description": "A library for aggregating API requests",
  "packageManager": "pnpm@7.0.1",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ci": "cross-env TEST_ENV=ci vitest",
    "build": "rollup -c",
    "prepublish": "turbo run build",
    "clean": "rimraf packages/*/dist",
    "docs:dev": "vitepress dev docs --port 3000 --host 0.0.0.0",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IDuxFE/request.git"
  },
  "author": "Jouryjc<https://github.com/Jouryjc>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IDuxFE/request/issues"
  },
  "homepage": "https://github.com/IDuxFE/request#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-angular": "^16.2.4",
    "c8": "^7.11.2",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.3.2",
    "fake-indexeddb": "^3.1.7",
    "fs-extra": "^10.1.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.4.1",
    "markdownlint-cli": "^0.31.1",
    "node-fetch": "^3.2.4",
    "pnpm": "7.0.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "simple-git": "^3.7.1",
    "simple-git-hooks": "^2.7.0",
    "turbo": "^1.2.16",
    "type-coverage": "^2.21.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vitepress": "1.0.0-alpha.4",
    "vitest": "^0.14.2",
    "vue": "^3.2.37"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  }
}
